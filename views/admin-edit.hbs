<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Employee</title>
    <link rel="stylesheet" href="/css/style.css"> 
    <script src="/js/script.js"></script> 
</head>
<body>
<div class="left-payroll admin-leftdash">  
    <h1>Employee Management</h1>
    <div class="search_employee">
        <h2>Search Employee</h2>
        <form id="searchEmployeeForm">
            <div>
                <label for="Email">Email:</label>
                <br><br>
                <input type="email" id="Email" name="Email" class="edit_profile" required>
            </div>
            <br>
            <button type="submit" class="submit_edit">Search</button>
        </form>
    </div>

    <div id="employeeDetails" class="editEmployeeForm" style="display: none;">
        <h2>Edit Employee</h2>
        <form id="editEmployeeForm">
            <input type="hidden" id="_id" name="_id">
            <div>
                <label for="First_Name">First Name:</label>
                <br><br>
                <input type="text" id="First_Name" name="First_Name" class="edit_profile" required>
            </div>
            <div>
                <br>
                <label for="Last_Name">Last Name:</label>
                <br><br>
                <input type="text" id="Last_Name" name="Last_Name" class="edit_profile" required>
            </div>
            <div>
                <br>
                <label for="Contact_Number">Contact Number:</label>
                <br><br>
                <input type="text" id="Contact_Number" name="Contact_Number" class="edit_profile" required>
            </div>
            <div>
                <br>
                <label for="Password">Password:</label>
                <br><br>
                <input type="password" id="Password" name="Password" class="edit_profile" required>
            </div>
            <div>
                <br>
                <label for="Address">Address:</label>
                <br><br>
                <input type="text" id="Address" name="Address" class="edit_profile" required>
            </div>
            <br>
            <button type="submit" class="submit_edit" >Save</button>
            <br>
        </form>
    </div>
</div>
<div class="right-payroll right-emp-dash">
    <div class="admin-rightdash-top">
        <h1>Admin Dashboard</h1>
        <p>As of <span id="date">Monday, January 1, 2024</span></p> 
        <p id="time">00:00:00</p>
    </div>
  <div class="ad-dash-spacer"></div>
    <div class="admin-rightdash-mid">
        <button type="button" class="ad-rightdash-btn" id="Ti-To-logs-id" onclick="window.location.href = 'admin_dashboard';">
            <i class="fi fi-rr-calendar-clock"></i>
            <p>Time-in/out Logs</p>
        </button>
        <button type="button" class="ad-rightdash-btn" id="emp-mgm-id" onclick="window.location.href = 'admin_empman_emprecs';">
            <i class="fi fi-rr-employee-man"></i>
            <p>Employee Management</p>
        </button>
        <button type="button" class="ad-rightdash-btn" id="adm-dlt" onclick="window.location.href = 'register';">
            <i class="fi fi-rr-users-alt"></i>
            <p>Add/Delete User</p>
        </button>
        <button type="button" class="ad-rightdash-btn" id="adm-not" onclick="window.location.href = 'admin_notification';">
            <i class="fi fi-rr-bell"></i>
            <p>Send Notifications</p>
        </button>
        <button type="button" class="ad-rightdash-btn" onclick="window.location.href = 'edit_user';">
                <i class="fi fi-rr-settings"></i>
                <p class="admin_edit">Edit Employee Information</p>
        </button>
    </div>
    <div class="admin-rightdash-bottom">
        <h2><a href="/logout">Log-Out</a></h2>
    </div>
</div>

    <script src="/js/admin-edit.js"></script>
</body>
</html>
